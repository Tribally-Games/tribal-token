{
  "name": "@tribally-games/tribal-token",
  "private": true,
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "prepare": "forge install && git submodule update --init --recursive && husky",
    "build": "forge build",
    "test": "forge test",
    "test-coverage": "forge coverage --report lcov",
    "devnet": "anvil --chain-id 1337",
    "commitlint": "commitlint --edit",
    "deploy-base-sepolia": "LZ_ENDPOINT=0x6EDCE65403992e310A62460808c4b910D972f10f forge script scripts/Deploy.s.sol --rpc-url https://sepolia.base.org --chain-id 84532 --private-key $PRIVATE_KEY --broadcast scripts/Deploy.s.sol",
    "verify-base-sepolia": "forge verify-contract --chain-id 84532 --etherscan-api-key $VERIFIER_API_KEY --verifier-url https://api-sepolia.basescan.org/api --num-of-optimizations 200 --watch --constructor-args $CONSTRUCTOR_ARGS $ADDRESS src/TribalToken.sol:TribalToken",
    "deploy-base": "LZ_ENDPOINT=0x1a44076050125825900e736c501f859c50fE728c script scripts/Deploy.s.sol --rpc-url https://mainnet.base.org --chain-id 8453 --private-key $PRIVATE_KEY --broadcast scripts/Deploy.s.sol"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "husky": "^9.0.11"
  },
  "dependencies": {
    "@layerzerolabs/lz-evm-oapp-v2": "^2.3.22",
    "@layerzerolabs/lz-evm-protocol-v2": "^2.3.22",
    "@openzeppelin/contracts": "^5.0.2"
  }
}
